<resources>
    <!-- Base application theme. -->
    <style name="Theme.Sanay3yAPP" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryLight</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBarColor</item>


        <!-- Customize your theme here. -->

    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.DeviceDefault.RatingBar.Indicator">
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:padding">0dp</item>
        <!-- Additional properties to try adjusting -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="RecyclerViewThemeOverlay" parent="">
        <item name="android:colorEdgeEffect">@color/colorPrimary</item>
    </style>

    <style name="CircularImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>