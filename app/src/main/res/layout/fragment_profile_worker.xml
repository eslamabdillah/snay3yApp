<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorSecondaryLight"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.50" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/photo">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="اسلام احمد عبداللاه"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="eslam@gmail.com"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="01033242661"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/id_national"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="1234567891111"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="كهربائى"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="الجيزة"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="10/12/1996"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="3 سنين"
                android:textSize="28sp" />

            <Button
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="64dp"
                android:backgroundTint="@color/colorSecondary"
                android:text="تعديل"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center"
                android:text="نسيت كلمة السر ؟ "
                android:textColor="@color/colorPrimary"
                android:textSize="28sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>