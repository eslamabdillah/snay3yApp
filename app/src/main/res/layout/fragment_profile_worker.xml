<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:id="@+id/profile_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/RecyclerViewThemeOverlay"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/app_bar_job_fragment"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/worker_image"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircularImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp" />


            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/worker_image">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/clients_opinions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="اراء العملاء"
                    android:textColor="@color/colorPrimary"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/worker_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorSecondary"
                    android:text="معرض الاعمال"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="الاسم"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="اسلام احمد عبداللاه"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="الايميل"
                    android:textSize="24sp" />


                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="eslam@gmail.com"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="رقم الموبيل"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="01033242661"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/txt_national"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="الرقم القومى"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/id_national"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="1234567891111"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/txt_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="المهنة"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="كهربائى"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/txt_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="المدينة"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="الجيزة"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/txt_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="تاريخ الميلاد"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="10/12/1996"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/txt_exp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="سنين الخبرة"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/exp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/edittext_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="3 سنين"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="64dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:text="تعديل"
                    android:textSize="28sp" />


                <Button
                    android:id="@+id/btn_signOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="64dp"
                    android:backgroundTint="#D65858"
                    android:text="تسجيل الخروج"
                    android:textSize="28sp" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>