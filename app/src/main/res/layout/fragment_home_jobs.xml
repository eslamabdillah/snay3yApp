        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_job" />


</androidx.constraintlayout.widget.ConstraintLayout>