<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".ui.authentication_forms.choose_login_signup.Choose_login_signupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.authentication_forms.signup.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.authentication_forms.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.authentication_forms.signup.SignUpWorker"
            android:exported="false" />

        <activity
            android:name=".ui.authentication_forms.signup.SignUpClient"
            android:exported="false" />

        <activity
            android:name=".ui.authentication_forms.signup.SignUpDailyWorker"
            android:exported="false" />
        <activity
            android:name=".ui.authentication_forms.signup.UploadPhotoActivity"
            android:exported="false" />

        <activity
            android:name=".ui.homeScreen.ChatActivity"
            android:exported="false" />


        <activity
            android:name=".ui.Splash"
            android:theme="@style/SplashTheme"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />
    </application>

</manifest>